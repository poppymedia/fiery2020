        {% if block.type == 'promotion' %}
          <!-- Pomotional details -->

        {% capture blockstyle %}
          {% if block.settings.image and section.settings.image_type != 'background' %}
          #shopify-section-{{ section.id }} .promotion img {
            margin: 0 !important;
            padding: 0 !important;
          } 
          {% endif %}
        {% endcapture %}
        
        {% assign styles = styles | append: blockstyle %}
      
        {% assign imgsize = 1000 | append: 'x' %}

