        }, 
        {
          "type": "checkbox",
          "id": "required",
          "label": "Required",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Form",
      "category": "Content"
    }
  ]
}

{% endschema %}
